


<section class="py-2">
    <div class="row">
        <div  class="  col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                The Bingo Book
            </h1>
            <p class="lead">Buy kakashi Hatake's Book</p>


            <form action="/charge" method="POST">
                <script
                    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="1500"
                    data-name="Kakashi's Secret Book"
                    data-description="Author - Jiraya Sensei"
                    data-image="/img/marketplace.png"
                    data-locale="auto"
                    data-currency="cad">
                </script>
                <script>
                    // Hide the default button
                    document.getElementsByClassName('stripe-button-el')[0].style.display = 'none'
                </script>
                <button class=" animated slideInLeft btn btn-info btn-lg">Buy</button><br><br><br>
            </form>
        </div>

        <div class="col-md-6">
            <img src="/img/original.gif" class=" animated pulse img-fluid rounded float-center " alt="Responsive image">
        </div>
    </div>
</section> 

